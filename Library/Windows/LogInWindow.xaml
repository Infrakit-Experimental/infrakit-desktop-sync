<Window
    x:Class="Library.InputWindows.LogInWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Library"
    mc:Ignorable="d"
    Title="Infrakit"
    Icon="/Library;component/Resources/Logo.ico"
    Height="170"
    Width="250"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    KeyDown="Window_KeyDown" >

    <Grid
        Margin="5">

        <!--#region structure definitions-->
        
        <Grid.ColumnDefinitions>

            <ColumnDefinition
                Width="auto"/>

            <ColumnDefinition
                Width="*"/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>

            <RowDefinition
                Height="30"/>

            <RowDefinition
                Height="30"/>

            <RowDefinition
                Height="30"/>

            <RowDefinition
                Height="30"/>

        </Grid.RowDefinitions>

        <!--#endregion structure definitions-->

        <!--#region username-->
        
        <!-- The username label. -->
        <TextBlock
            Grid.Column="0"
            Grid.Row="0"
            Text="{DynamicResource logIn.username}"
            Margin="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"/>

        <!-- The username text box. -->
        <TextBox
            Grid.Column="1"
            Grid.Row="0"
            x:Name="tbxUsername"
            Margin="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            TextWrapping="NoWrap"/>

        <!--#endregion username-->

        <!--#region password-->

        <!-- The password label. -->
        <TextBlock
            Grid.Column="0"
            Grid.Row="1"
            Text="{DynamicResource logIn.password}"
            Margin="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"/>

        <!-- The password border. -->
        <Rectangle
            Grid.Column="1"
            Grid.Row="1"
            Margin="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Stroke="#FFABADB3"
            RadiusX="3"
            RadiusY="3"/>

        <!-- The password text box. -->
        <PasswordBox
            Grid.Column="1"
            Grid.Row="1"
            x:Name="tbxPassword"
            Margin="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderBrush="{x:Null}"
            Background="{x:Null}"/>

        <!--#endregion password-->

        <!-- The remember me checkbox. -->
        <CheckBox
            Grid.Row="2"
            Grid.ColumnSpan="2"
            x:Name="cbRemeberMe"
            Content="{DynamicResource logIn.rememberMe}"
            Margin="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center" />

        <!-- The log in button. -->
        <Button
            Grid.Row="3"
            Grid.ColumnSpan="2"
            x:Name="btnLogIn"
            Content="{DynamicResource logIn.logIn}"
            Style="{StaticResource BaseButtonStyle}"
            Margin="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Click="btnLogIn_Click"/>

    </Grid>

</Window>